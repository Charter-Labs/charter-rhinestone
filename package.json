{
  "type": "module",
  "scripts": {
    "prepare": "bun run build",
    "build": "bun run clean && bun run build:esm && bun run build:types",
    "build:esm": "tsc --module es2015 --outDir ./src/dist && tsc-alias --outDir ./src/dist && printf '{\"type\": \"module\",\"sideEffects\":false}' > ./src/dist/package.json",
    "build:types": "tsc --module esnext --declarationDir ./src/dist --outDir ./src/dist --emitDeclarationOnly --declaration --declarationMap",
    "clean": "rimraf src/dist",
    "test": "",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "prettier:check": "prettier --check \"**/*.{json,md,svg,yml,ts}\"",
    "prettier:write": "prettier --write \"**/*.{json,md,svg,yml,ts}\"",
    "changeset": "changeset",
    "changeset:release": "bun run build && changeset publish",
    "changeset:version": "changeset version && bun run install --lockfile-only",
    "size": "size-limit"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@rhinestone/module-sdk": "0.2.8",
    "@rhinestone/orchestrator-sdk": "0.2.0-rc.8",
    "viem": "^2.20.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@size-limit/esbuild-why": "^11.2.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/bun": "^1.2.8",
    "eslint": "^9.23.0",
    "rimraf": "^6.0.1",
    "size-limit": "^11.2.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.13",
    "typescript": "^5.8.2"
  }
}
